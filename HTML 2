    </div>

    <script>
        // Background fade effect on scroll
        window.addEventListener('scroll', function() {
            const scrolled = window.pageYOffset;
            const maxScroll = document.documentElement.scrollHeight - window.innerHeight;
            const scrollPercent = scrolled / maxScroll;
            
            const overlay = document.getElementById('bgOverlay');
            const newOpacity = 0.7 + (scrollPercent * 0.25);
            overlay.style.background = `linear-gradient(to bottom, rgba(16, 16, 16, ${newOpacity}), rgba(16, 16, 16, 0.95))`;
        });

        // Load user's photo as background (placeholder for now)
        function loadUserPhoto(imageUrl) {
            document.getElementById('bgImage').style.backgroundImage = `url('${imageUrl}')`;
        }

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

        // Go to contact section when clicking name
        function goToContact() {
            document.getElementById('contact').scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        // Easter egg
                let easterEggClicked = false;
                document.getElementById('clickableName').addEventListener('click', function() {
                    if (!easterEggClicked) {
                        document.getElementById('easterEgg').style.display = 'block';
                        easterEggClicked = true;
                    }
                });
        
                let isAdmin = false;

        function toggleAdmin() {
            if (!isAdmin) {
                const pwd = prompt('Entrez le mot de passe administrateur:');
                if (pwd === ADMIN_PASSWORD) {
                    isAdmin = true;
                    setAdminState(true);
                } else if (pwd !== null) {
                    alert('Mot de passe incorrect');
                }
            } else {
                isAdmin = false;
                setAdminState(false);
            }
        }

        const skillBubbles = document.querySelectorAll('.skill-bubble');
        skillBubbles.forEach(bubble => {
            const tip = bubble.getAttribute('data-tip');
            const tooltipEl = bubble.querySelector('.tooltip');
            if (tip && tooltipEl) {
                tooltipEl.textContent = tip;
                bubble.addEventListener('mouseenter', () => tooltipEl.classList.add('show'));
                bubble.addEventListener('mouseleave', () => tooltipEl.classList.remove('show'));
            }
        });

        let projects = [
            {
                title: 'Comparaison Avanc√©e DuckDB vs PostGIS',
                desc: 'Analyse comparative des solutions DuckDB et PostGIS dans diff√©rents sc√©narios de requ√™tes SQL spatiales',
                link: ''
            }
        ];

        function renderProjects() {
            const container = document.getElementById('projectsList');
            container.innerHTML = projects.map(proj => `
                <div class="project-item">
                    <div class="project-info">
                        <h3>${proj.title}</h3>
                        <p>${proj.desc}</p>
                    </div>
                    <a href="${proj.link || '#'}" class="download-btn" ${!proj.link ? 'onclick="alert(\'Lien PDF non disponible\'); return false;"' : 'target="_blank"'}>T√©l√©charger PDF</a>
                </div>
            `).join('');
        }

        function openModal() {
            document.getElementById('projectModal').style.display = 'flex';
        }

        function closeModal() {
            const modal = document.getElementById('projectModal');
            modal.style.display = 'none';
            document.getElementById('projectTitle').value = '';
            document.getElementById('projectDesc').value = '';
            document.getElementById('projectLink').value = '';
        }

        function addProject() {
            const title = document.getElementById('projectTitle').value.trim();
            const desc = document.getElementById('projectDesc').value.trim();
            const link = document.getElementById('projectLink').value.trim();

            if (title && desc) {
                projects.push({ title, desc, link });
                renderProjects();
                closeModal();
            } else {
                alert('Veuillez remplir le titre et la description');
            }
        }

                function updatePhoneNumber(number) {
                    document.getElementById('phoneNumber').textContent = number;
                }
        
                renderProjects();
            </script>
        </body>
        </html>
    