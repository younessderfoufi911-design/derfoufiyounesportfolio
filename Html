    <script>
        const bgImage = document.getElementById('bgImage');
        const bgOverlay = document.getElementById('bgOverlay');

        function setBackgroundImage(url) {
            if (!url) return;
            bgImage.style.backgroundImage = `url('${url}')`;
            bgImage.style.backgroundSize = 'cover';
            bgImage.style.backgroundPosition = 'center center';
            bgImage.style.opacity = '1';
        }

        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const maxScroll = Math.max(document.documentElement.scrollHeight - window.innerHeight, 1);
            const scrollPercent = Math.min(scrolled / maxScroll, 1);
            const newOpacity = 0.7 + (scrollPercent * 0.25);
            bgOverlay.style.background = `linear-gradient(to bottom, rgba(16,12,12,${newOpacity}), rgba(16,12,12,0.95))`;
            const translateY = Math.round(scrolled * 0.2);
            bgImage.style.transform = `translateY(-${translateY}px)`;
        });

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const href = this.getAttribute('href');
                if (href.startsWith('#')) {
                    e.preventDefault();
                    const target = document.querySelector(href);
                    if (target) target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

          const nameTextEl = document.getElementById('nameText');
        const fullName = 'YOUNES DERFOUFI';
        function typeText(el, text, speed = 80, callback) {
            el.textContent = '';
            let i = 0;
            const id = setInterval(() => {
                el.textContent += text.charAt(i);
                i++;
                if (i >= text.length) { clearInterval(id); if (callback) callback(); }
            }, speed);
        }

        window.addEventListener('load', () => {
            // Start type effect then enable liquid glass animation
            typeText(nameTextEl, fullName, 70, () => {
                nameTextEl.classList.add('glow-active');
                // enable the liquid glass animated background once typed
                nameTextEl.classList.add('liquid');
            });
        });

        function goToContact() { document.getElementById('contact').scrollIntoView({ behavior: 'smooth', block: 'start' }); }

        const clickableName = document.getElementById('clickableName');
        const easterEggEl = document.getElementById('easterEgg');
        const easterEggTextEl = document.getElementById('easterEggText');
        const easterEggMessage = "Je suis √©galement producteur de musique dans le style EDM, et cofondateur de l'agence Framopia, sp√©cialis√©e en photographie et vid√©ographie. Merci pour cette d√©couverte approfondie sur moi ‚Äî maintenant, on peut collaborer dans encore plus de domaines ! üé∂üì∏";
        let easterSeen = false;

        clickableName.addEventListener('click', () => {
            if (easterSeen) return;
            easterSeen = true;
            easterEggEl.classList.add('show');
            typeText(easterEggTextEl, easterEggMessage, 24);
        });

        const ADMIN_KEY = 'younes_is_admin_v1';
        const addProjectBtn = document.getElementById('addProjectBtn');
        const adminToggleBtn = document.getElementById('adminToggleBtn');
        const ADMIN_PASSWORD = 'framopiaAdmin2025';

        function setAdminState(state) {
            if (state) {
                addProjectBtn.classList.add('admin-visible');
                adminToggleBtn.classList.add('logged');
                adminToggleBtn.textContent = 'Mode Admin (actif)';
            } else {
                addProjectBtn.classList.remove('admin-visible');
                adminToggleBtn.classList.remove('logged');
                adminToggleBtn.textContent = 'Mode Admin';
            }
        }

        function toggleAdmin() {
            const currentlyAdmin = adminToggleBtn.classList.contains('logged');
            if (!currentlyAdmin) {
                const pass = prompt('Entrez le mot de passe administrateur :');
                if (pass === null) return;
                if (pass === ADMIN_PASSWORD) {
                    setAdminState(true);
                    alert('Mode administrateur activ√©');
                } else {
                    alert('Mot de passe incorrect');
                }
            } else {
                if (confirm('Voulez-vous d√©sactiver le mode administrateur ?')) {
                    setAdminState(false);
                    alert('Mode administrateur d√©sactiv√©');
                }
            }
        }

        let projects = [];
        function renderProjects() {
            const container = document.getElementById('projectsList');
            if (projects.length === 0) {
                container.innerHTML = `<div class="project-item"><div class="project-info"><h3>Comparaison Avanc√©e DuckDB vs PostGIS</h3><p>Analyse comparative des solutions DuckDB et PostGIS dans diff√©rents sc√©narios de requ√™tes SQL spatiales</p></div><a href="#" class="download-btn" onclick="alert('Lien non disponible'); return false;">T√©l√©charger PDF</a></div>`;
                return;
            }
            container.innerHTML = projects.map((p, idx) => `
                <div class="project-item">
                    <div class="project-info">
                        <h3>${p.title}</h3>
                        <p>${p.desc}</p>
                    </div>
                    <a href="${p.link || '#'}" class="download-btn" ${!p.link ? 'onclick="alert(\'Lien non disponible\'); return false;"' : 'target="_blank"'}>T√©l√©charger PDF</a>
                </div>`).join('');
        }

        function openModal() { document.getElementById('projectModal').style.display = 'flex'; }
        function closeModal() { 
            document.getElementById('projectModal').style.display = 'none'; 
            document.getElementById('projectTitle').value = ''; 
            document.getElementById('projectDesc').value = ''; 
            document.getElementById('projectLink').value = ''; 
        }
        function addProject() {
            if (!adminToggleBtn.classList.contains('logged')) { 
                alert('Seul l\'administrateur peut ajouter des projets'); 
                return; 
            }
            const title = document.getElementById('projectTitle').value.trim();
            const desc = document.getElementById('projectDesc').value.trim();
            const link = document.getElementById('projectLink').value.trim();
            if (!title || !desc) { alert('Veuillez remplir le titre et la description du projet'); return; }
            projects.unshift({ title, desc, link }); 
            renderProjects(); 
            closeModal();
        }

        projects.push({ title: 'Comparaison Avanc√©e DuckDB vs PostGIS', desc: 'Analyse comparative des solutions DuckDB et PostGIS dans diff√©rents sc√©narios de requ√™tes SQL spatiales', link: '' });
        renderProjects();

        const bubbleContainer = document.getElementById('bubbleContainer');
        const bubbles = Array.from(bubbleContainer.querySelectorAll('.skill-bubble'));
        
        bubbles.forEach((b, i) => {
            const tooltip = b.querySelector('.tooltip');
            const tip = b.getAttribute('data-tip');
            
            b.addEventListener('mouseenter', () => {
                tooltip.textContent = tip || '';
                tooltip.classList.add('show');
            });
            
            b.addEventListener('mouseleave', () => {
                tooltip.classList.remove('show');
            });
        });

        function updatePhoneNumber(number) { document.getElementById('phoneNumber').textContent = number; }
        
        function loadUserPhoto(url) {
            setBackgroundImage(url);
            bgOverlay.style.background = `linear-gradient(to bottom, rgba(16,16,16,0.72), rgba(16,16,16,0.96))`;
        }
        function randomFloat() {
    const bubbles = document.querySelectorAll('.skill-bubble');
    bubbles.forEach(bubble => {
        const randomX = (Math.random() - 0.5) * 20; // Random X offset
        const randomY = (Math.random() - 0.5) * 20; // Random Y offset
        bubble.style.transform = `translate(${randomX}px, ${randomY}px)`; // Apply random translation
    });
}

// Call randomFloat every few seconds to create a smooth floating effect
setInterval(randomFloat, 3000);

    </script>
