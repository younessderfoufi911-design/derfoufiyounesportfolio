<script>
document.addEventListener('DOMContentLoaded', () => {

    // --- DATA ---
    const projectsData = [
        {
            title: "Benchmarking des bases de donn√©es spatiales",
            shortDescription: "Analyse comparative des performances entre PostGIS et DuckDB Spatial pour des requ√™tes g√©ospatiales complexes.",
            fullDescription: "Ce projet acad√©mique approfondi visait √† √©valuer et comparer les performances de deux syst√®mes de gestion de bases de donn√©es spatiales de premier plan : PostGIS, une extension robuste pour PostgreSQL, et DuckDB Spatial, une solution moderne en m√©moire. L'analyse s'est concentr√©e sur des requ√™tes complexes impliquant des jointures spatiales, des calculs de distance et des agr√©gations sur de grands ensembles de donn√©es g√©ographiques. Les r√©sultats ont mis en √©vidence les forces et faiblesses de chaque solution en fonction des cas d'usage."
        },
        {
            title: "Stage √† l'ANCFCC Mekn√®s",
            shortDescription: "Application pratique des connaissances cadastrales et fonci√®res au sein du service du cadastre.",
            fullDescription: "Durant mon stage √† l'Agence Nationale de la Conservation Fonci√®re, du Cadastre et de la Cartographie (ANCFCC), j'ai particip√© activement aux op√©rations du service du cadastre. Mes missions incluaient la v√©rification de dossiers techniques, l'utilisation de logiciels de DAO pour la mise √† jour des plans cadastraux, et l'assistance sur le terrain pour des lev√©s topographiques. Cette exp√©rience m'a offert une vision concr√®te des proc√©dures l√©gales et techniques li√©es au foncier au Maroc."
        },
        {
            title: "Projet de Photogramm√©trie par Drone",
            shortDescription: "Cr√©ation d'un mod√®le num√©rique de terrain (MNT) et d'une orthophoto √† partir de captures par drone.",
            fullDescription: "Ce projet consistait √† planifier et ex√©cuter un vol de drone pour capturer des images a√©riennes d'une zone d'√©tude. En utilisant des logiciels sp√©cialis√©s comme Agisoft Metashape, j'ai trait√© les images pour g√©n√©rer une orthophoto √† haute r√©solution et un mod√®le num√©rique de terrain (MNT) pr√©cis. Le projet a couvert toutes les √©tapes, de la planification de la mission √† la production des livrables cartographiques finaux."
        },
        {
            title: "Automatisation de Workflows SIG avec Python",
            shortDescription: "D√©veloppement de scripts Python pour automatiser des t√¢ches r√©p√©titives dans QGIS.",
            fullDescription: "Pour optimiser l'efficacit√© des analyses g√©ospatiales, j'ai d√©velopp√© une s√©rie de scripts en utilisant la biblioth√®que PyQGIS. Ces scripts automatisent des t√¢ches telles que le traitement par lots de couches de donn√©es, la g√©n√©ration de cartes th√©matiques standardis√©es, et l'exportation de rapports. Ce projet a permis de r√©duire consid√©rablement le temps de traitement manuel et d'assurer une meilleure coh√©rence des r√©sultats."
        }
    ];

    // --- ELEMENTS ---
    const bgImage = document.getElementById('bgImage');
    const clickableName = document.getElementById('clickableName');
    const easterEgg = document.getElementById('easterEgg');
    const sections = document.querySelectorAll('section, header');
    const projectsContainer = document.querySelector('.projects-container');
    const popup = document.getElementById('projectPopup');
    const popupTitle = document.getElementById('popupTitle');
    const popupDescription = document.getElementById('popupDescription');
    const closePopupBtn = document.getElementById('closePopupBtn');
    const navLinks = document.querySelectorAll('nav a');

    // --- FUNCTIONS ---

    // Parallax background effect on mouse move
    const handleMouseMove = (e) => {
        const { clientX, clientY } = e;
        const { innerWidth, innerHeight } = window;
        const xPercent = (clientX / innerWidth - 0.5) * 2;
        const yPercent = (clientY / innerHeight - 0.5) * 2;
        
        // Adjust the multiplier for more/less effect
        bgImage.style.transform = `translate(${xPercent * -15}px, ${yPercent * -15}px) scale(1.1)`;
    };
    
    // Smooth scrolling for navigation links
    const handleNavClick = (e) => {
        e.preventDefault();
        const targetId = e.currentTarget.getAttribute('href');
        const targetElement = document.querySelector(targetId);
        if (targetElement) {
            window.scrollTo({
                top: targetElement.offsetTop - 70, // Offset for fixed nav
                behavior: 'smooth'
            });
        }
    };

    // Animate elements on scroll
    const handleScrollAnimation = (entries, observer) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
                observer.unobserve(entry.target);
            }
        });
    };
    
    // Populate projects on the page
    const populateProjects = () => {
        projectsContainer.innerHTML = '';
        projectsData.forEach((project, index) => {
            const projectEl = document.createElement('div');
            projectEl.classList.add('project-item');
            projectEl.dataset.index = index;
            projectEl.innerHTML = `
                <h3>${project.title}</h3>
                <p>${project.shortDescription}</p>
            `;
            projectEl.addEventListener('click', () => openPopup(index));
            projectsContainer.appendChild(projectEl);
        });
    };

    // Open the project details popup
    const openPopup = (index) => {
        const project = projectsData[index];
        popupTitle.textContent = project.title;
        popupDescription.textContent = project.fullDescription;
        popup.classList.add('active');
        document.body.classList.add('blur-active');
    };

    // Close the project details popup
    const closePopup = () => {
        popup.classList.remove('active');
        document.body.classList.remove('blur-active');
    };

    // --- INITIALIZATION & EVENT LISTENERS ---

    // Scroll animation observer
    const scrollObserver = new IntersectionObserver(handleScrollAnimation, {
        threshold: 0.1
    });
    sections.forEach(section => scrollObserver.observe(section));

    // Mouse move for parallax
    window.addEventListener('mousemove', handleMouseMove);

    // Easter egg toggle
    clickableName.addEventListener('click', () => {
        const isVisible = easterEgg.style.display === 'block';
        easterEgg.style.display = isVisible ? 'none' : 'block';
        if (!isVisible) {
            // Restart typing animation if it's already finished
            const p = easterEgg.querySelector('p');
            p.style.animation = 'none';
            p.offsetHeight; /* trigger reflow */
            p.style.animation = '';
        }
    });

    // Navigation clicks for smooth scroll
    navLinks.forEach(link => link.addEventListener('click', handleNavClick));
    
    // Populate projects
    populateProjects();
    
    // Popup close button
    closePopupBtn.addEventListener('click', closePopup);
    
    // Close popup when clicking the overlay
    popup.addEventListener('click', (e) => {
        if (e.target === popup) {
            closePopup();
        }
    });
    
    // Close popup with Escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && popup.classList.contains('active')) {
            closePopup();
        }
    });
});
</script>

</body>
</html>
```