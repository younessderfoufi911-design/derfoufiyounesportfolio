<script>
document.addEventListener('DOMContentLoaded', () => {

    // --- DATA ---
    const projectsData = [
        {
            title: "Benchmarking des bases de données spatiales",
            shortDescription: "Analyse comparative des performances entre PostGIS et DuckDB Spatial pour des requêtes géospatiales complexes.",
            fullDescription: "Ce projet académique approfondi visait à évaluer et comparer les performances de deux systèmes de gestion de bases de données spatiales de premier plan : PostGIS, une extension robuste pour PostgreSQL, et DuckDB Spatial, une solution moderne en mémoire. L'analyse s'est concentrée sur des requêtes complexes impliquant des jointures spatiales, des calculs de distance et des agrégations sur de grands ensembles de données géographiques. Les résultats ont mis en évidence les forces et faiblesses de chaque solution en fonction des cas d'usage."
        },
        {
            title: "Stage à l'ANCFCC Meknès",
            shortDescription: "Application pratique des connaissances cadastrales et foncières au sein du service du cadastre.",
            fullDescription: "Durant mon stage à l'Agence Nationale de la Conservation Foncière, du Cadastre et de la Cartographie (ANCFCC), j'ai participé activement aux opérations du service du cadastre. Mes missions incluaient la vérification de dossiers techniques, l'utilisation de logiciels de DAO pour la mise à jour des plans cadastraux, et l'assistance sur le terrain pour des levés topographiques. Cette expérience m'a offert une vision concrète des procédures légales et techniques liées au foncier au Maroc."
        },
        {
            title: "Projet de Photogrammétrie par Drone",
            shortDescription: "Création d'un modèle numérique de terrain (MNT) et d'une orthophoto à partir de captures par drone.",
            fullDescription: "Ce projet consistait à planifier et exécuter un vol de drone pour capturer des images aériennes d'une zone d'étude. En utilisant des logiciels spécialisés comme Agisoft Metashape, j'ai traité les images pour générer une orthophoto à haute résolution et un modèle numérique de terrain (MNT) précis. Le projet a couvert toutes les étapes, de la planification de la mission à la production des livrables cartographiques finaux."
        },
        {
            title: "Automatisation de Workflows SIG avec Python",
            shortDescription: "Développement de scripts Python pour automatiser des tâches répétitives dans QGIS.",
            fullDescription: "Pour optimiser l'efficacité des analyses géospatiales, j'ai développé une série de scripts en utilisant la bibliothèque PyQGIS. Ces scripts automatisent des tâches telles que le traitement par lots de couches de données, la génération de cartes thématiques standardisées, et l'exportation de rapports. Ce projet a permis de réduire considérablement le temps de traitement manuel et d'assurer une meilleure cohérence des résultats."
        }
    ];

    // --- ELEMENTS ---
    const bgImage = document.getElementById('bgImage');
    const clickableName = document.getElementById('clickableName');
    const easterEgg = document.getElementById('easterEgg');
    const sections = document.querySelectorAll('section, header');
    const projectsContainer = document.querySelector('.projects-container');
    const popup = document.getElementById('projectPopup');
    const popupTitle = document.getElementById('popupTitle');
    const popupDescription = document.getElementById('popupDescription');
    const closePopupBtn = document.getElementById('closePopupBtn');
    const navLinks = document.querySelectorAll('nav a');

    // --- FUNCTIONS ---

    // Parallax background effect on mouse move
    const handleMouseMove = (e) => {
        const { clientX, clientY } = e;
        const { innerWidth, innerHeight } = window;
        const xPercent = (clientX / innerWidth - 0.5) * 2;
        const yPercent = (clientY / innerHeight - 0.5) * 2;
        
        // Adjust the multiplier for more/less effect
        bgImage.style.transform = `translate(${xPercent * -15}px, ${yPercent * -15}px) scale(1.1)`;
    };
    
    // Smooth scrolling for navigation links
    const handleNavClick = (e) => {
        e.preventDefault();
        const targetId = e.currentTarget.getAttribute('href');
        const targetElement = document.querySelector(targetId);
        if (targetElement) {
            window.scrollTo({
                top: targetElement.offsetTop - 70, // Offset for fixed nav
                behavior: 'smooth'
            });
        }
    };

    // Animate elements on scroll
    const handleScrollAnimation = (entries, observer) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
                observer.unobserve(entry.target);
            }
        });
    };
    
    // Populate projects on the page
    const populateProjects = () => {
        projectsContainer.innerHTML = '';
        projectsData.forEach((project, index) => {
            const projectEl = document.createElement('div');
            projectEl.classList.add('project-item');
            projectEl.dataset.index = index;
            projectEl.innerHTML = `
                <h3>${project.title}</h3>
                <p>${project.shortDescription}</p>
            `;
            projectEl.addEventListener('click', () => openPopup(index));
            projectsContainer.appendChild(projectEl);
        });
    };

    // Open the project details popup
    const openPopup = (index) => {
        const project = projectsData[index];
        popupTitle.textContent = project.title;
        popupDescription.textContent = project.fullDescription;
        popup.classList.add('active');
        document.body.classList.add('blur-active');
    };

    // Close the project details popup
    const closePopup = () => {
        popup.classList.remove('active');
        document.body.classList.remove('blur-active');
    };

    // --- INITIALIZATION & EVENT LISTENERS ---

    // Scroll animation observer
    const scrollObserver = new IntersectionObserver(handleScrollAnimation, {
        threshold: 0.1
    });
    sections.forEach(section => scrollObserver.observe(section));

    // Mouse move for parallax
    window.addEventListener('mousemove', handleMouseMove);

    // Easter egg toggle
    clickableName.addEventListener('click', () => {
        const isVisible = easterEgg.style.display === 'block';
        easterEgg.style.display = isVisible ? 'none' : 'block';
        if (!isVisible) {
            // Restart typing animation if it's already finished
            const p = easterEgg.querySelector('p');
            p.style.animation = 'none';
            p.offsetHeight; /* trigger reflow */
            p.style.animation = '';
        }
    });

    // Navigation clicks for smooth scroll
    navLinks.forEach(link => link.addEventListener('click', handleNavClick));
    
    // Populate projects
    populateProjects();
    
    // Popup close button
    closePopupBtn.addEventListener('click', closePopup);
    
    // Close popup when clicking the overlay
    popup.addEventListener('click', (e) => {
        if (e.target === popup) {
            closePopup();
        }
    });
    
    // Close popup with Escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && popup.classList.contains('active')) {
            closePopup();
        }
    });
});
</script>

</body>
</html>
```